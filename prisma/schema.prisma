model Shop_Owner {
  id           String   @id @default(uuid()) @db.Uuid
  userName     String
  phone        String   @unique
  email        String   @unique
  password     String
  shop_name    String
  shop_type    String
 refreshToken String? 
  products     Product[]
  transaction  Transaction[]
  staff       staff[]

  gst_enabled  Boolean  @default(false)
  gst_percentage Int @default(0)
  welcomeMessage String @default("Thanks for visiting! Vist Again")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  subscriptionDetails SubscriptionDetails[]
}

model Product {
  id               String   @id @default(uuid()) @db.Uuid
  product_Name     String
  product_Price    Decimal  @db.Decimal(10, 2)
  category         String
  shortCut_key     String

  transactionItem  TransactionItem[]

  shop_id          String      @db.Uuid
  shop_Type        Shop_Owner  @relation(fields: [shop_id], references: [id], onDelete: Cascade)
}

model Transaction {
  id               String   @id @default(uuid()) @db.Uuid  

  shop             Shop_Owner @relation(fields: [shopId], references: [id])
  shopId           String      @db.Uuid

  customerName     String?
  customerPhone    String?
  warranty         String?

  subtotal         Decimal    @db.Decimal(10,2)
  gstAmount        Decimal?   @db.Decimal(10,2)
  discountAmount   Decimal    @db.Decimal(10,2)
  totalAmount      Decimal    @db.Decimal(10,2)

  paymentMethod    String
  createdAt        DateTime   @default(now())

  items            TransactionItem[]
}

model TransactionItem {
  id              String   @id @default(uuid()) @db.Uuid   
  transaction     Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  transactionId   String      @db.Uuid

  product         Product @relation(fields: [productId], references: [id])
  productId       String   @db.Uuid

  product_price   Decimal  @db.Decimal(10, 2)
  quantity        Int
}

model SubscriptionDetails{
  id              String   @id @default(uuid()) @db.Uuid
  shop             Shop_Owner @relation(fields: [shopId], references: [id])
  shopId           String  @db.Uuid
  subscriptionStartsAt DateTime @default(now())
  subscriptionEndsAt DateTime 
  subscriptionStatus Boolean @default(true)
  createdAt DateTime @default(now())
}

model staff{
  id              String   @id @default(uuid()) @db.Uuid
  username        String
  email           String @unique
  password      String
  role     String @default("STAFF")
  createdAt DateTime @default(now())
  shop             Shop_Owner @relation(fields: [shopId], references: [id])
  shopId           String  @db.Uuid

}

